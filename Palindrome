#include<stdio.h>
void main()
{
int n, original,reverse=0,remainder;
printf("Enter an integer:");
scanf("%d",&n);
original=n;
while(n!=0)
{
remainder = n%10;
reverse = reverse*10+remainder;
n/=10;
}
if(original==reverse)
printf("The given number is Palindrome");
else
printf("The number is not a Palindrome");
}
